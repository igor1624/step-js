{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@step-js-core/*": ["src/step-js/core/*"],
      "@step-js-html-5/*": ["src/step-js/html-5/*"],
      "@step-js-bootstrap/*": ["src/step-js/bootstrap/*"],
      "@step-js-custom/*": ["src/step-js/custom/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
